{
	"tasks": {
		"dev": "deno task install && deno task dev:client",
		"dev:server": "deno run --watch --allow-net --allow-env --allow-read server/main.ts",
		"dev:client": "cd client && deno run dev",
		"install": "cd client && deno install",
		"install:client": "cd client && deno install",
		"start": "deno run --allow-net --allow-env --allow-read --allow-write server/main.ts",
		"deploy": "deno task build && deno task start",
		"server": "deno run --watch --allow-net --allow-env --allow-read server/main.ts",
		"format": "deno fmt && deno lint",
		"lint": "deno lint",
		"check": "deno check server/**/*.ts"
	},
	"nodeModulesDir": "auto",
	"imports": {
		"@std/assert": "jsr:@std/assert@1",
		"@sveltejs/adapter-vercel": "npm:@sveltejs/adapter-vercel@^5.8.1",
		"@types": "./types/dnd/index.ts",
		"@utils": "./utils/index.ts",
		"hono": "jsr:@hono/hono",
		"@hono/zod-validator": "jsr:@hono/zod-validator",
		"zod": "npm:zod@^4"
	},
	"workspace": ["./client"],
	"lint": {
		"include": ["server/", "client/src/"],
		"rules": {
			"tags": ["recommended"],
			"include": ["ban-untagged-todo"]
		}
	},
	"fmt": {
		"useTabs": false,
		"indentWidth": 2,
		"semiColons": true,
		"singleQuote": true,
		"proseWrap": "preserve",
		"include": ["server/", "client/src/"]
	},
	"unstable": ["fmt-component"],
	"compilerOptions": {
		"allowJs": true,
		"lib": ["deno.window"],
		"strict": true
	}
}
